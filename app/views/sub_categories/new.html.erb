<h1>New sub_category</h1>

<% form_for(@sub_category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
<p>
    <%= f.label :category_id %><br />
    <%= f.select :category_id,@categories.collect {|p| [ p.name, p.id ]},{:include_blank => "-Select Category-" } %>

  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sub_categories_path %>